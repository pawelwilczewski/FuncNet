<Project>
  <ItemGroup>
    <!-- Use local configuration file if it exists -->
    <AdditionalFiles Include="$(MSBuildProjectDirectory)\FuncNetConfig.json" Condition="Exists('$(MSBuildProjectDirectory)\FuncNetConfig.json')" />
    
    <!-- Otherwise use the default configuration file included in the package -->
    <AdditionalFiles Include="$(MSBuildThisFileDirectory)..\content\FuncNetConfig.json" Condition="!Exists('$(MSBuildProjectDirectory)\FuncNetConfig.json')">
      <Link>FuncNetConfig.json</Link>
    </AdditionalFiles>
  </ItemGroup>
</Project>
